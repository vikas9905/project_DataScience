            background_color:(0, 255,153,60)
        Button:
            text:'Back'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.38}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current='start'
                root.manager.transition.direction='right'
<Register>:
    name:"register"
    user_name:user_name
    user_id:user_id
    user_pass:user_pass
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
            source:'images.jpg'
    FloatLayout:
        TextInput:
            id:user_name
            hint_text:'Name'
            multiline:False
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.5}
            background_color:(255, 255,255,60)
        TextInput:
            id:user_id
            hint_text:'Email'
            multiline:False
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.44}
            background_color:(255, 255,255,60)
        TextInput:
            id:user_pass
            hint_text:'Passcode'
            password:True
            multiline:False
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.38}
            background_color:(255, 255,255,60)
        Button:
            text:'Submit'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.32}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.transition.direction="right"
                root.submit()
        Button:
            text:'Back'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.26}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current='start'
                root.manager.transition.direction='right'
