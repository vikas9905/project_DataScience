            background_color:(0, 255,153,60)
            on_release:
                root.show_load()
        Button:
            text:'Show Result'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.44}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current = "show_result"
                root.manager.transition.direction = "left"
        Button:
            text:'Back'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.44}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current = "Menu"
                root.manager.transition.direction = "left"
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

