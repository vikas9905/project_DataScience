WindowManger:
    Start_screen:
    Login_screen:
    Forgot_pass:
    Register:
    Menu_screen:
    File_handle:
    Personal_Diary:
    Youtube_handle:
    Facebook_handle:
    Personal_Diary:
    Joke:
    Top_ten_news:
    Movies:
<Start_screen>:
    name:"start"
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
            source:'images.jpg'
    FloatLayout:
        Button:
            text:'Log In'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.44}
            background_color:(0, 255,153,60)
            on_press:
                root.manager.current = "login_screen"
                root.manager.transition.direction = "left"
        Button:
            text:'Register'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.34}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current="register"
                root.manager.transition.direction="left"


<Login_screen>:
    name:"login_screen"
    psw:psw
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
            source:'images.jpg'
    FloatLayout:
        TextInput:
            id:psw
            hint_text:'Passcode'
            password:True
            multiline:False
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.5}
            background_color:(255, 255,255,60)
        Button:
            text:'Validate'
            size_hint:.9,.05
            pos_hint:{'x':0.05,'y':.44}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current = "Menu" if root.valid() == 1 else "login_screen"
                root.manager.transition.direction = "left"
        Button:
            text:'Forgot?'
            size_hint:.4,.08
            pos_hint:{'x':0.05,'y':.34}
            background_color:(0, 255,153,60)
            on_release:
                root.manager.current = "forget"
                root.manager.transition.direction = "left"
<Forgot_pass>:
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
            source:'images.jpg'
    name:"forget"
    FloatLayout:
        TextInput:
            hint_text:'Passcode'
